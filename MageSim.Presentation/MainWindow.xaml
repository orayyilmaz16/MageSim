<!-- MageSim.Presentation/Views/MainWindow.xaml -->
<Window x:Class="MageSim.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mage Rotasyon Sim" Height="720" Width="1180">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Instance list -->
        <ListBox Grid.Column="0" ItemsSource="{Binding Clients}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="8" Padding="10" BorderBrush="#3A3A3A" BorderThickness="1" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                                <TextBlock Text="State:" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding State}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <ProgressBar Minimum="0" Maximum="800" Value="{Binding Mana}" Height="12"/>
                            <ItemsControl ItemsSource="{Binding Skills}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Width="120"/>
                                            <TextBlock Text="{Binding Key}" Width="48" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding CooldownMs}" Width="80" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Mana}" Width="60" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Condition}" Width="160" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Timeline & Controls -->
        <StackPanel Grid.Column="1" Margin="8">
            <TextBlock Text="Timeline / Events" FontWeight="Bold" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding Events}" Height="520"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Load Config" Command="{Binding LoadConfigCommand}" Margin="0,0,8,0"/>
                <Button Content="Start All" Command="{Binding StartAllCommand}" Margin="0,0,8,0"/>
                <Button Content="Stop All" Command="{Binding StopAllCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>